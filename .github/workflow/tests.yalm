name: Run Python Tests

on:
  push:
    branches: [ main, master ]
    paths:
      - 'Fintech-Backend/**'
      - '*.py'
  pull_request:
    branches: [ main, master ]

jobs:
  test:
    runs-on: windows-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'
    
    - name: Run test.py
      working-directory: ./Fintech-Backend
      run: py test.py